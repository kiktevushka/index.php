<?php

$variable = 3.14;        
$variable = 5;           
$variable = "one";       
$variable = true;        
$variable = null;        
$variable = [];          
$variable = new stdClass(); 
$variable = fopen("php://temp", "r");

$type = ""; 


switch (true) {
    case is_bool($variable):
        $type = "bool";
        break;
    case is_float($variable):
        $type = "float";
        break;
    case is_int($variable):
        $type = "int";
        break;
    case is_string($variable):
        $type = "string";
        break;
    case is_null($variable):
        $type = "null";
        break;
    default:

        $type = "other";
        break;
}

echo "Type is " . $type;

?>
